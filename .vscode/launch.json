{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "start:dev",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/taskedin-be.csproj",
        "--",
        "--urls",
        "https://localhost:3001;http://localhost:8080"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "launchBrowser": {
        "enabled": false
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:3001;http://localhost:8080",
        "DOTNET_USE_POLLING_FILE_WATCHER": "1"
      },
      "stopAtEntry": false
    },
    {
      "name": "start:debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0/taskedin-be.dll",
      "args": ["watch"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:3001;http://localhost:8080"
      },
      "launchBrowser": {
        "enabled": false
      }
    }
  ]
}
